<header>
  <h1>Shelters Index</h1>
</header>
<div class='shelters-index'>
<% @shelters.each do |shelter| %>
  <div class='shelter-element'>
    <h3> <%= link_to shelter.name, "/shelters/#{shelter.id}" %></h3>
    <h5> Pets available: <%= shelter.pet_count %></h5>
    <ul class='edit-delete'>
      <li><%= link_to "<button type='button' class='btn btn-success'>Edit</button>".html_safe, "/shelters/#{shelter.id}/edit" %></li>
      <li><%= button_to 'Delete', "/shelters/#{shelter.id}", method: :delete, class: 'btn btn-danger' %></li>
    </ul>
  </div>
<% end %>
</div>
<br>
<div class='add-button'>
  <%= link_to "Add New Shelter", "/shelters/new", class: 'btn btn-dark navbar-color btn-lg' %>
</div>
