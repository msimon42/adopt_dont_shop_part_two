<header>
  <h1>Edit Shelter</h1>
</header>
<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @shelter.name %><br>
  <%= label_tag :address %>
  <%= text_field_tag :address, @shelter.address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city, @shelter.city %>
  <%= label_tag :state %>
  <%= text_field_tag :state, @shelter.state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, @shelter.zip %><br>
  <%= submit_tag 'Submit', class: 'btn btn-success' %>
  <%= link_to "<button type='button' class='btn btn-danger'>Cancel</button>".html_safe, "/shelters/#{@shelter.id}" %>
<% end %>
