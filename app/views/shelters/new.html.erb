<h1>Add Shelter</h1>

<%= form_tag '/shelters' do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :address %>
  <%= text_field_tag :address %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %><br>
  <%= submit_tag 'Submit', class: 'btn btn-success' %>
  <%= link_to "<button type='button' class='btn btn-danger'>Cancel</button>".html_safe, "/shelters" %>
<% end %>
