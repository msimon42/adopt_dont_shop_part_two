<header>
  <h1>Add Shelter</h1>
</header>
<%= form_tag "/shelters/#{@shelter.id}", class: 'new-edit-form rounded' do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, '', class: 'form-control' %><br>
  <%= label_tag :address %>
  <%= text_field_tag :address, '', class: 'form-control' %><br>
  <%= label_tag :city %>
  <%= text_field_tag :city, '', class: 'form-control' %>
  <%= label_tag :state %>
  <%= text_field_tag :state, '', class: 'form-control' %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, '', class: 'form-control' %><br>
  <div class='form-buttons'>
    <%= submit_tag 'Submit', class: 'btn btn-success' %>
    <%= link_to 'Cancel', "/shelters/#{@shelter.id}", class: 'btn btn-danger' %>
  </div>
<% end %>
