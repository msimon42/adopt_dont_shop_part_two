<header>
  <h1>Add Shelter</h1>
</header>
<%= form_for @shelter, :as => :shelter, method: :post, :html => {:class => 'new-edit-form rounded'} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %>
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>
  <%= f.label :state %>
  <%= f.text_field :state, class: 'form-control' %>
  <%= f.label :zip %>
  <%= f.text_field :zip, class: 'form-control' %>
  <div class='form-buttons'>
    <%= f.submit class: 'btn btn-success' %>
    <%= link_to "<button type='button' class='btn btn-danger'>Cancel</button>".html_safe, "/shelters" %>
  </div>  
<% end %>
