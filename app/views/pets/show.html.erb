<div class='pet-show'>
<h1><%= @pet.name %></h1>

 <img src="<%= @pet.image %>" alt="pet_image" style="width:200px;height:300px">
 <h2>Info</h2>
 <p><%= @pet.description %></p>
 <p>Approximate age: <%= @pet.approx_age %></p>
 <p>Sex: <%= @pet.sex %></p>
 <p>Adoption Status: <%= @pet.adoption_status %></p>
 <% if @pet.adopter_id %>
    <p>On hold for <%= link_to @adopter_name, "/application/#{@pet.adopter_id}" %></p>
  <% end %>
<ul class='edit-delete'>
<li><%= link_to "<button type='button' class='btn btn-primary'>Update Info</button>".html_safe, "/pets/#{@pet.id}/edit" %></li>
<% if session[:favorites].include?(@pet.id.to_s) %>
  <li><%= button_to 'Remove Favorite', "/favorites/#{@pet.id}", method: :delete, class: 'btn btn-warning' %></li>
<% else %>
  <li><%= button_to 'Favorite', "/favorites/#{@pet.id}", method: :patch, class: 'btn btn-success' %></li>
<% end %>
<li><%= button_to 'Delete', "/pets/#{@pet.id}", method: :delete, class: 'btn btn-danger' %></li>
<li><%= link_to 'View Applications', "/pets/#{@pet.id}/applications", class: 'btn btn-secondary' %></li>
</ul>
</div>
