<h1><%= @pet.name %></h1>

 <img src="<%= @pet.image %>" alt="pet_image" style="width:200px;height:300px">
 <h2>Info</h2>
 <p><%= @pet.description %></p>
 <p>Approximate age: <%= @pet.approx_age %></p>
 <p>Sex: <%= @pet.sex %></p>
 <p>Adoption Status: <%= @pet.adoption_status %></p>
 <% if @pet.adoptor_name %>
    <p>On hold for <%= @pet.adoptor_name %></p>
  <% end %>   
<ul class='edit-delete'>
<li><%= link_to "<button type='button' class='btn btn-primary'>Update Info</button>".html_safe, "/pets/#{@pet.id}/edit" %></li>
<% if session[:favorites].include?(@pet.id.to_s) %>
  <li><%= form_tag "/favorites/#{@pet.id}", method: :delete do %>
    <%= submit_tag 'Remove Favorite', class: 'btn btn-warning' %></li>
  <% end %>
<% else %>
  <li><%= form_tag "/favorites/#{@pet.id}", method: :patch do %>
    <%= submit_tag 'Favorite', class: 'btn btn-success' %></li>
  <% end %>
<% end %>
<li><%= form_tag "/pets/#{@pet.id}", method: :delete do %>
      <%= submit_tag 'Delete', class: 'btn btn-danger' %></li>
    <% end %>
<li><%= link_to "<button type='button' class='btn btn-secondary'>View Applications</button>".html_safe, "/pets/#{@pet.id}/applications" %></li>
</ul>
