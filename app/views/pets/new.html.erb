
<h1>Add Pet</h1>
<%= form_tag "/shelters/#{@shelter.id}/pets" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :approx_age %>
  <%= text_field_tag :approx_age %><br>
  <p> Male: <%= radio_button_tag 'sex', 'Male' %>
  Female: <%= radio_button_tag 'sex', 'Female' %></p>
  <%= submit_tag 'Submit', class: 'btn btn-success' %>
<% end %>
<%= link_to "<button type='button' class='btn btn-danger'>Cancel</button>".html_safe, "/shelters/#{@shelter.id}/pets" %>
