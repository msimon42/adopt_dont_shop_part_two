<header>
  <h1>Edit Pet Info</h1>
</header>  
<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @pet.name %><br>
  <%= label_tag :image %>
  <%= text_field_tag :image, @pet.image %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description, @pet.description %><br>
  <%= label_tag :approx_age %>
  <%= text_field_tag :approx_age, @pet.approx_age %><br>
  <%= submit_tag 'Submit', class: 'btn btn-success' %>
  <%= link_to "<button type='button' class='btn btn-danger'>Cancel</button>".html_safe, "/pets/#{@pet.id}" %>
<% end %>
