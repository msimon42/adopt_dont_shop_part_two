

<h1>Pets in <%= @shelter.name %></h1>
<div class='card-columns'>
<% @shelter_pets.each do |pet| %>
<div class="card" style="width: 22rem;">
  <img class="card-img-top" src="<%= pet.image %>" alt="pet_image" style='height:300px;width:22rem'>
  <div class="card-body pet-index">
    <h5 class="card-title"><%= link_to pet.name, "/pets/#{pet.id}" %></h5>
    <p class="card-text">Sex: <%= pet.sex %></p>
    <p class="card-text">Location: <%= link_to pet.shelter_name, "/shelters/#{pet.shelter_id}" %></p>
    <p><%= link_to 'Learn More', "/pets/#{pet.id}", class: 'btn btn-dark navbar-color' %></p>
    <ul class='edit-delete'>
      <li><%= link_to 'Edit', "/pets/#{pet.id}/edit", class: 'btn btn-success' %></li>
      <li><%= button_to 'Delete', "/pets/#{pet.id}", method: :delete, class: 'btn btn-danger' %></li>
    </ul>
  </div>
</div>
<% end %>
</div>
<%= link_to 'Add new Pet', "/shelters/#{@shelter.id}/pets/new", class: 'btn btn-dark navbar-color' %>
