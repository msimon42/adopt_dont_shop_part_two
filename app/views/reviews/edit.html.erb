
<header>
  <h1>Edit Review</h1>
</header>

  <%= form_tag "/reviews/#{@review.id}", method: :patch, class: "new-edit-form rounded" do %>
     <%= label_tag :title %>
     <%= text_field_tag :title, @review.title %><br>
     <%= label_tag :content %>
     <%= text_area_tag :content, @review.content %><br>
     <%= label_tag :rating %>
     <%= select_tag :rating, options_for_select((1..5).to_a) %>
     <%= label_tag :image %>
     <%= text_field_tag :image, @review.image %><br>
     <%= submit_tag 'Submit', class: 'btn btn-success' %>
     <%= link_to "<button type='button' class='btn btn-danger'>Cancel</button>".html_safe, "/shelters/#{@review.shelter_id}" %>
   <% end %>
